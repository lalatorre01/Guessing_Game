<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundColor"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="120dp"
        android:text="Guess my Number (1 - 100)"
        android:textSize="28dp"
        android:padding="10dp"
        />
    <TextView
        android:id="@+id/chancesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="190dp"
        android:textSize="28dp"
        android:text="You have 8 Guesses"
        android:padding="10dp"
        />


    <TextView
        android:id="@+id/changingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="260dp"
        android:text="Enter your Guess"
        android:textSize="28dp"
        android:padding="10dp"
        android:textAlignment="center"
        />
    <EditText
        android:id="@+id/userInput"
        android:layout_width="190dp"
        android:layout_height="160dp"
        android:background="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:inputType="number"
        android:textSize="50dp"
        >

    </EditText>
    <Button
        android:id="@+id/submitButton"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginVertical="580dp"
        android:layout_marginStart="130dp"
        android:textSize="30dp"
        android:text="Submit"
        android:onClick="submit"
        />

</RelativeLayout>
